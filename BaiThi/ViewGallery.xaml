<Page
    x:Class="BaiThi.ViewGallery"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BaiThi"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel>
            <StackPanel>
                <Button Content="Get photo" Click="ReadFile" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <StackPanel>
                    <Image x:Name="Avatar" Width="200" Height="200" HorizontalAlignment="Left" Margin="20"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="File name :"/>
                    <TextBlock x:Name="name"></TextBlock>
                    <TextBlock Text="File Path :"/>
                    <TextBlock x:Name="path"></TextBlock>
                    <TextBlock Text="Date created :"/>
                    <TextBlock x:Name="date"></TextBlock>
                </StackPanel>
            </StackPanel>
        </StackPanel>


    </Grid>
</Page>
